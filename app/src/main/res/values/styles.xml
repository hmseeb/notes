<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Custom SearchView style -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/search_view_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <!-- Custom SearchView text style -->
    <style name="CustomSearchViewText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>